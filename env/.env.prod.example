# Конфигурация Redis Cluster для продакшена
# Минимальное количество мастер-узлов для работоспособности кластера (3 из 5)
REDIS_QUORUM=3

# Таймаут подключения к Redis в секундах (увеличен для продакшена)
REDIS_TIMEOUT=10

# Таймаут чтения данных из Redis в секундах (увеличен для продакшена)
REDIS_READ_TIMEOUT=10

# Узлы Redis Cluster
REDIS_CLUSTER_NODES=your-redis-node1:6379,your-redis-node2:6379,your-redis-node3:6379,your-redis-node4:6379,your-redis-node5:6379,your-redis-node6:6379,your-redis-node7:6379,your-redis-node8:6379,your-redis-node9:6379,your-redis-node10:6379

# Конфигурация сессий Redis
# Префикс для ключей сессий в Redis
REDIS_SESSION_PREFIX=your_project_name:

# Время жизни сессии в секундах (3600 сек = 1 час)
REDIS_SESSION_LIFETIME=3600

# Настройки сборщика мусора для сессий
REDIS_GC_PROBABILITY=1
REDIS_GC_DIVISOR=100

# Настройки кэширования TLD
REDIS_TLD_CACHE_TTL=86400
REDIS_TLD_CACHE_PREFIX=tld_cache:

# Настройки кэширования MX
REDIS_MX_CACHE_TTL=3600
REDIS_MX_CACHE_PREFIX=mx_cache:

# Конфигурация мониторинга Redis
# Интервал проверки состояния узлов кластера в секундах
REDIS_CHECK_INTERVAL=30

# Таймаут для ping-запросов при проверке узлов в секундах
REDIS_PING_TIMEOUT=2

# Конфигурация приложения
# Режим работы приложения (продакшен)
APP_ENV=production

# Отключение режима отладки для продакшена (безопасность и производительность)
APP_DEBUG=false